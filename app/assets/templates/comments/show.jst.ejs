<div class = 'thumbnail container'>
	<div class = 'thumbnail wrapper'>
		<% if (user.get('uid')) { %>
			<img src = 'https://graph.facebook.com/<%= user.get('uid') %>/picture'/>
		<% } else { %>
			<img src = 'http://s3.amazonaws.com/fusegap/misc/user.png'/>
		<% } %>
	</div>
</div>
<div class = "name_stats_container">
	<div id = 'user_name' class = "user_name">
		<%= user.get('name') %>
	</div>
	<div class = "rank global_rank">
		GLOBAL RANK: <span><%= rank %></span>
	</div>
	<div class = "rank facts_learned">
		FACTS LEARNED: <span><%= facts %></span>
	</div>
</div>
<div class = "text">
	<%= comment.get('title') %>
</div>

<div id = 'reply_button'>Reply</div>
<div id = 'reply' class ='hide'>
	<form id = 'comment_reply'>
		<textarea type = 'text' id = 'title' />
		<input type = 'submit' value = 'Reply' class = "post_comment_button"/>
	</form>
</div>
<div id = 'children'></div>