<div class = 'name container'>
	<div class = 'name'><%= user.get('name') %></div>
</div>
<div class = 'rank global_rank'>
	<div class = "profile_icon_container">
		<img src = 'http://s3.amazonaws.com/fusegap/logos/black_40.png'/>	
	</div>
	<span class = "number"><%= rank %></span><span class="label">GLOBAL RANK</span>
</div>

<div class = 'rank facts_learned'>
	<div class = "profile_icon_container">
		<div class = "character hand"><img src = 'http://s3.amazonaws.com/fusegap/misc/black_hand.png'></div>
	</div>
	<span class = "number"><%= games.facts %></span><span class = 'label'>FACTS LEARNED</span> 
</div>
<div class = 'rank games_won'>
	<div class = "profile_icon_container">
		<div class = "character checkmark">&#x2713;</div>
	</div>
	<span class = "number"><%= games.won %></span><span class = 'label'>GAMES WON</span> 
</div>
<div class = 'rank games_lost'>
	<div class = "profile_icon_container">
		<div class = "character x-mark">&#x2717;</div>
	</div>
	<span class = "number"><%= games.lost %></span><span class = 'label'>GAMES LOST</span> 
</div>

<div class = 'picture container'>
	<div class = 'picture wrapper'>
		<% if (user.get('uid')) { %>
			<img src = 'https://graph.facebook.com/<%= user.get('uid') %>/picture?type=large' />
		<% } else { %>
			<img src = 'http://s3.amazonaws.com/fusegap/misc/user.png' />
		<% } %>
	</div>
</div>