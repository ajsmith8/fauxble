<div class = 'name container'>
	<div class = 'name'><%= user.get('name') %></div>
</div>
<div class = 'rank'>
	Global Rank:<span class = "right"> <%= rank %></span>
</div>
<div class = 'picture container'>
	<div class = 'picture wrapper'>
		<% if (user.get('uid')) { %>
			<img src = 'https://graph.facebook.com/<%= user.get('uid') %>/picture?type=large' />
		<% } else { %>
			<img src = 'assets/misc/user.png' />
		<% } %>
	</div>
</div>
<div class = 'stats'>
	<div class = 'played container'>
		<div class = 'played'>Facts Learned: <div class = "right"><%= games.facts %></div></div>
	</div>
	<div class = 'won container'>
		<div class = 'won'>Games Won: <div class = "right"><%= games.won %></div></div>
	</div>
	<div class = 'lost container'>
		<div class = 'lost'>Games Lost: <div class = "right"><%= games.lost %></div></div>
	</div>
</div>