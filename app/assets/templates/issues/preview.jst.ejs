<div class = "title container">	
	<div class = "title"><%= issue.get('title') %></div>
</div>
<div class = "thumbnail">
	<div class = "wrapper">
		<img src = "assets/issues/<%= issue.get('image') %>.png" height = "100%" width = "100%"/>
	</div>
</div>
<div class = "hover-container">
	<div class = "description">
		<p style = "display:inline; color: rgb(46,46,46);">
			<%= issue.get('description') %>
		</p>	
	</div>
	<div class="showmore">Click for more...</div>
</div>