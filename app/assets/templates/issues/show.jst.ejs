<div class = 'thumbnail container'>
	<div class = 'thumbnail wrapper'>
		<img src = 'http://s3.amazonaws.com/fusegap/issues/<%= issue.get('image') %>.png' />
	</div>
</div>
<div id = 'issue' class = 'title container'>
	<div class = 'title'><%= issue.get('title') %></div>
</div>
<div class = 'facts container'>
	<div class = 'facts'># of facts: <span class="bluegreen"><%= num_questions %></span></div>
</div>
<div id = 'learn' class = 'button learn'>
	<div class = 'learn'>Info</div>
</div>
<div id = 'challenger' class = 'challenger'></div>
<div id = 'user' class = 'challengee'></div>
<div id = 'play' class = 'button play'>
	<div class = 'play'>Play</div>
</div>
<div id = 'description' class = 'description container hide'>
	<div class = 'description'><%= issue.get('description') %></div>
</div>
