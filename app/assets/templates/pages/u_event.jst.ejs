<div class = "picture container">
	<div class = "picture wrapper">
		<% if (person.get('uid')) { %>
			<img src = 'https://graph.facebook.com/<%= person.get('uid') %>/picture'/>
		<% } else { %>
			<img src = 'assets/misc/user.png'/>
		<% } %>
	</div>
</div>
<div class = "name container">
	<div class = "name">
		<span><%= person.get('name') %></span> signed up!
	</div>
</div>