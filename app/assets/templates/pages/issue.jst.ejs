<div class = "issue_profile_container">
	<div class = "top_container">
		<div class = 'thumbnail container'>
			<div class = 'thumbnail wrapper'>
				<img src = 'assets/issues/<%= issue.get('image') %>.png' />
			</div>
		</div>
		<div class = "title container">
			<%= issue.get('title') %>
		</div>
		<div class = 'stats total_facts'>
			<div class = "profile_icon_container">
				<div class = "character pencil">&#9999;</div>	
			</div>
			<span class = "number"><%= facts %></span><span class="label">TOTAL FACTS</span>
		</div>

		<div class = 'stats active_fusers'>
