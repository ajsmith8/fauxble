<!-- bootstrapped data needed for initial load 
	 no particular reason I used instance variables
	 see sessions#main for variable assigment -->
	
<script type = 'text/json' id = 'json'>
	{
		"current_user" : <%= @current_user.to_json %>,
		"issues" : <%= @issues %>,
		"questions" : <%= @questions %>,
		"challenges" : <%= @challenges %>,
		"users" : <%= @users %>,
		"achievables" : <%= @achievables %>,
		"user_achievables" : <%= @user_achievables %>
	}
</script>


<%= content_for :javascript do -%>
	<script type = 'text/javascript'>
		$(function() {
			// formats bootstrapped data for backbone
			// initialization
			var div, data;
			div = $('<div></div>');
			div.html($('#json').text());
			data = JSON.parse(div.text());
			
			// this is what starts Backbone
			// fauxble.js file is where it begins
			Fauxble.initialize(data);
		});
	</script>
<% end %>