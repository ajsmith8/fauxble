<div class = 'header'></div>
<div>
	<div id = 'tutorial'></div>
	<div id = 'background'></div>
</div>
<div class = 'popup' ></div>
<div class = 'test-container'>
	<div class = 'test'></div>
</div>
<div class = 'page'></div>
<div class = 'footer'>
	<div id = 'footer' class = 'wrapper'></div>
</div>

<script type = 'text/json' id = 'json'>
	{
		"current_user" : <%= @current_user.to_json %>,
		"challenges" : <%= @challenges %>,
		"tasks" : <%= @tasks %>,
		"users" : <%= @users %>,
		"ranks" : <%= @ranks %>,
		"achievables" : <%= @achievables %>,
		"user_achievables" : <%= @user_achievables %>,
		"page_metrics" : <%= @page_metrics %>,
		"user_metrics" : <%= @user_metrics %>
	}
</script>

<%= content_for :javascript do -%>
	<script type = 'text/javascript'>
		$(function() {
			var div, data;
			div = $('<div></div>');
			div.html($('#json').text());
			data = JSON.parse(div.text());
		
			Fauxble.initialize(data);
		});
	</script>
<% end %>